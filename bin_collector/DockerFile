# Stage 1: Build the Go application
FROM golang:1.18 as builder

# Set the Current Working Directory inside the container
WORKDIR /app

# Copy go.mod and go.sum files to the workspace
COPY go.mod ./
COPY go.sum ./

# Download dependencies
RUN go mod download

# Copy the entire source code
COPY . .

# Build the Go application
RUN go build -o app main.go

# Stage 2: Create a minimal runtime image
FROM alpine:3.18

# Install required packages
RUN apk --no-cache add ca-certificates jq

# Set the working directory
WORKDIR /root/

# Copy the compiled Go binary and other required files from the builder stage
COPY --from=builder /app/app .
COPY --from=builder /app/template.html .  # Assuming template.html is present
COPY --from=builder /app/static ./static  # Assuming static folder is present
COPY --from=builder /app/config.json .    # Assuming config.json is required
COPY --from=builder /app/run.sh .         # Assuming run.sh is present

# Make the Go application and run.sh executable (if applicable)
RUN chmod +x app run.sh

# Expose port 8081 for the Go application
EXPOSE 8081

# Run the application using the run.sh script
CMD ["./run.sh"]
