# Use the official Golang image to build the application
FROM golang:1.20 as builder

# Set the Current Working Directory
WORKDIR /app

# Copy go.mod and go.sum files
COPY go.mod ./

# Download dependencies
RUN go mod download

# Copy the source code
COPY main.go ./
COPY template.html ./
COPY static ./static/
COPY config.yaml ./

# Build the Go app
RUN go build -o main .

# Use a minimal base image for running the built application
FROM alpine:latest

# Set environment variables for timezone if needed
ENV TZ="UTC"

# Set the working directory for the application
WORKDIR /app

# Copy the compiled binary and other necessary files from the builder
COPY --from=builder /app/main .
COPY --from=builder /app/template.html ./
COPY --from=builder /app/static ./static/
COPY --from=builder /app/config.yaml ./

# Copy the run script
COPY run.sh ./
RUN chmod +x run.sh

# Expose a port if your application serves on a specific port (e.g., 8080)
EXPOSE 8080

# Start the application using the run.sh script
ENTRYPOINT ["./run.sh"]
