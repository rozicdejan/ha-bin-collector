# Use the official Golang image with Go 1.18 for building the application
FROM golang:1.18 as builder

# Set the current working directory inside the container
WORKDIR /app

# Copy go.mod and go.sum files
COPY go.mod ./

# Download dependencies
RUN go mod download

# Copy the source code
COPY main.go ./
COPY template.html ./
COPY static ./static/
COPY config.yaml ./

# Build the Go app
RUN go build -o main .

# Use a minimal base image for running the built application
FROM alpine:latest

# Set environment variables for timezone if needed
ENV TZ="UTC"

# Set the working directory for the application
WORKDIR /app

# Copy the compiled binary and necessary files from the builder stage
COPY --from=builder /app/main .
COPY --from=builder /app/template.html ./
COPY --from=builder /app/static ./static/
COPY --from=builder /app/config.yaml ./

# Copy the run script
COPY run.sh ./
RUN chmod +x run.sh

# Expose port 8081 for the web application
EXPOSE 8081

# Start the application using the run.sh script
ENTRYPOINT ["./run.sh"]
